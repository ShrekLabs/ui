{
  "name": "@shreklabs/ui",
  "version": "1.0.0",
  "description": "Some UI functions/hooks/components (based on React and gravity-ui)",
  "author": "Ruminat",
  "license": "MIT",
  "private": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "before-publish": "npm run build && npm run test",
    "publish-patch": "npm run before-publish && npm version patch && npm publish --access public",
    "publish-minor": "npm run before-publish && npm version minor && npm publish --access public",
    "publish-major": "npm run before-publish && npm version major && npm publish --access public",
    "dev": "tsc && vite build --watch",
    "test": "vitest --run",
    "test-dev": "vitest --run",
    "start": "vite --host --open",
    "build": "tsc && vite build",
    "build:types": "dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix"
  },
  "devDependencies": {
    "@gravity-ui/components": "^2.9.2",
    "@gravity-ui/icons": "^2.8.1",
    "@gravity-ui/navigation": "^1.8.2",
    "@gravity-ui/uikit": "^5.25.0",
    "@shreklabs/core": "^1.0.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dts-bundle-generator": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-prettier": "^5.1.0",
    "immer": "^10.0.3",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "lodash": "^4.17.21",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "@gravity-ui/components": "^2.9",
    "@gravity-ui/icons": "^2.8",
    "@gravity-ui/navigation": "^1.8",
    "lodash": "^4",
    "@gravity-ui/uikit": "^5.25",
    "@shreklabs/core": "^1.0.4",
    "immer": "^10",
    "react": "^18",
    "react-dom": "^18"
  }
}
